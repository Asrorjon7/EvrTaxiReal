    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="background">@color/toolbarColor</item>
        <!--<item name="android:background">@android:color/transparent</item>-->
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
         <item name="background">@color/toolbarColor</item>
        <!--<item name="android:background">@android:color/transparent</item>-->
    </style>

    <style name="AppTheme.Fragment">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AppTheme.GreenButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="cornerRadius">@dimen/_6sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/textsize_12</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.94sp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/marginsize</item>
    </style>
    <style name="AppTheme.YellowButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/grayTextColor</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="cornerRadius">@dimen/_6sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.94sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/textsize_12</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/marginsize</item>
    </style>
    <style name="AppTheme.GreyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/grayTextColor</item>
        <item name="backgroundTint">#F2F3F5</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="cornerRadius">@dimen/_6sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.94sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/textsize_12</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/marginsize</item>
    </style>
    <style name="editTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="android:textColor">@color/grayTextColor</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textSize">@dimen/textsize_13</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.94sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/_8sdp</item>
    </style>

    <style name="defaultViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
    </style>

    <style name="spinnerStyle" parent="defaultViewStyle">

        <item name="smsp_errorTextColor">@color/errorColor</item>
        <item name="errorEnabled">true</item>
        <item name="smsp_floatingLabelColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="smsp_errorTextSize">@dimen/_9sdp</item>
        <item name="smsp_itemSize">@dimen/_11sdp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="smsp_hintSize">@dimen/_11sdp</item>
        <item name="smsp_isReSelectable">true</item>
        <item name="smsp_showDropdownHint">false</item>
        <item name="smsp_underlineSize">0dp</item>
        <item name="smsp_arrowSize">0dp</item>

        <item name="android:spinnerMode">dropdown</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/_8sdp</item>
    </style>

    <style name="autoComplete" parent="@style/Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="android:textColor">@color/grayTextColor</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textSize">@dimen/textsize_13</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.94sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/_8sdp</item>
    </style>
    <style name="AppTheme.spinner" parent="@style/Widget.AppCompat.Spinner.DropDown">
        <item name="android:textColor">@color/grayTextColor</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textSize">@dimen/textsize_13</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.94sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/_8sdp</item>
    </style>
    <style name="CheckBoxTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <style name="RadioButtonStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/grayBackground</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/blue</item>
    </style>
    <style name="AppTheme.MediumTextview" parent="Widget.AppCompat.TextView">
         <item name="android:fontFamily">@font/roboto_medium</item>
         <item name="android:textColor">@color/grayTextColor</item>
</style>

    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/grayTextColor</item>
    </style>


    <style name="NumberPickerText">
        <item name="android:textSize">@dimen/textsize_14</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@android:color/transparent </item>
    </style>
        <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
            <item name="spinBars">true</item>
            <!--<item name="android:icon">@drawable/ic_drawer</item>-->
        </style>

    <declare-styleable name="MaskedEditText">
        <attr name="mask" format="string" />
        <attr name="allowed_chars" format="string" />
        <attr name="enable_ime_action" format="boolean" />
        <attr name="denied_chars" format="string" />
        <attr name="char_representation" format="string" />
        <attr name="keep_hint" format="boolean" />
    </declare-styleable>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">350dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:background">@drawable/bottom_sheet</item>
    </style>
    <style name="DefaultNumberPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>
</resources>
