<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/_12sdp"
    tools:context=".auth.ui.LoginUser.LoginFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivLogin"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:src="@drawable/login_men" />
    <EditText
        android:id="@+id/etNameInput"
        style="@style/editTextStyle"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_24sdp"
        android:hint="Ismingizni kiriting" />

    <info.texnoman.evrtaxireal.utils.maskeditText.MaskedEditText
        android:id="@+id/etNumberInput"
        style="@style/editTextStyle"
        android:layout_width="match_parent"
        android:inputType="number"
        mask:allowed_chars="1234567890"
        mask:mask="+998 ## ### ## ##"
        android:layout_marginTop="@dimen/_12sdp"

        app:keep_hint="true" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp">
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="horizontal"
            android:padding="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radioTypeMale"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:background="@drawable/radio_flat_selector"
                android:button="@android:color/transparent"
                android:checked="true"
                android:drawableStart="@drawable/man_label"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:paddingLeft="@dimen/_16sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingRight="@dimen/_16sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="@string/erkak"
                android:textColor="@color/radio_flat_text_selector"
                android:textSize="@dimen/_12sdp" />
            <RadioButton
                android:id="@+id/radioTypeFemale"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:animateLayoutChanges="true"
                android:background="@drawable/radio_flat_selector"
                android:button="@android:color/transparent"
                android:drawableStart="@drawable/woman_label"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:paddingLeft="@dimen/_16sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingRight="@dimen/_16sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="@string/ayol"
                android:textColor="@color/radio_flat_text_selector"
                android:textSize="@dimen/_12sdp" />
        </RadioGroup>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        style="@style/AppTheme.GreenButton"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="@dimen/_18sdp"
        android:drawableRight="@color/white"
        android:text="Keyingisi" />

</androidx.appcompat.widget.LinearLayoutCompat>