<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.ui.ChooseLanguage.ChooseLanguageFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:lineSpacingExtra="1sp"
            android:text="Tilni tanlang / Выберите язык"
            android:textColor="#111827"
            android:textSize="@dimen/_15sdp"/>
           <androidx.appcompat.widget.LinearLayoutCompat
               android:id="@+id/LanguageView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:gravity="center"
               android:layout_marginTop="@dimen/_12sdp"
               android:paddingHorizontal="@dimen/_12sdp"
               android:paddingVertical="@dimen/_8sdp"
               android:background="@drawable/language_background"
               >
               <androidx.appcompat.widget.LinearLayoutCompat
                  android:id="@+id/lvRusskiy"
                   android:animateLayoutChanges="true"
                   android:layout_width="@dimen/_160sdp"
                   android:layout_height="@dimen/_40sdp"
                   android:orientation="horizontal"
                   android:gravity="center_vertical"
                   android:paddingHorizontal="@dimen/_12sdp"
                   android:layout_marginTop="@dimen/_4sdp"
                   android:background="@drawable/language_flat_selector"

                   >
                   <ImageView
                       android:layout_width="@dimen/_25sdp"
                       android:layout_height="@dimen/_25sdp"
                       android:src="@drawable/russia" />
                   <TextView
                       android:id="@+id/tvRusskiy"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Русский"
                       android:layout_marginLeft="@dimen/_4sdp"
                       android:textSize="@dimen/_15sdp"
                       android:fontFamily="@font/roboto_medium"
                       android:textColor="@color/white"
                       android:translationY="-0.25sp"
                       android:lineSpacingExtra="1sp"
                       />
               </androidx.appcompat.widget.LinearLayoutCompat>
               <androidx.appcompat.widget.LinearLayoutCompat
                   android:id="@+id/lvUzbekKrill"
                   android:animateLayoutChanges="true"
                   android:layout_width="@dimen/_160sdp"
                   android:layout_height="@dimen/_40sdp"
                   android:orientation="horizontal"
                   android:gravity="center_vertical"
                   android:paddingHorizontal="@dimen/_12sdp"
                   android:layout_marginTop="@dimen/_2sdp"
                   >
                   <ImageView
                       android:layout_width="@dimen/_25sdp"
                       android:layout_height="@dimen/_25sdp"
                       android:src="@drawable/uzb" />
                   <TextView
                       android:id="@+id/tvUzbekKrill"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Узбекча"
                       android:layout_marginLeft="@dimen/_4sdp"
                       android:textSize="@dimen/_15sdp"
                       android:fontFamily="@font/roboto_medium"
                       android:textColor="@color/textcolor"
                       android:translationY="-0.25sp"
                       android:lineSpacingExtra="1sp"
                       />
               </androidx.appcompat.widget.LinearLayoutCompat>
               <androidx.appcompat.widget.LinearLayoutCompat
                   android:id="@+id/lvUzbekLotin"
                   android:animateLayoutChanges="true"
                   android:layout_width="@dimen/_160sdp"
                   android:layout_height="@dimen/_40sdp"
                   android:orientation="horizontal"
                   android:gravity="center_vertical"
                   android:paddingHorizontal="@dimen/_12sdp"
                   android:background="@drawable/language_background"
                   android:layout_marginTop="@dimen/_2sdp"
                   >
                   <ImageView
                       android:layout_width="@dimen/_25sdp"
                       android:layout_height="@dimen/_25sdp"
                       android:src="@drawable/uzb" />
                   <TextView
                       android:id="@+id/tvUzbekLotin"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="O’zbekcha"
                       android:layout_marginLeft="@dimen/_4sdp"
                       android:textSize="@dimen/_15sdp"
                       android:textColor="@color/textcolor"
                       android:fontFamily="@font/roboto_medium"
                       android:translationY="-0.25sp"
                       android:lineSpacingExtra="1sp"
                       />
               </androidx.appcompat.widget.LinearLayoutCompat>
           </androidx.appcompat.widget.LinearLayoutCompat>
          <com.google.android.material.button.MaterialButton
              android:id="@+id/btnConfirm"
              android:layout_width="@dimen/_184sdp"
              style="@style/AppTheme.YellowButton"
              android:layout_marginTop="@dimen/_14sdp"
              android:text="Davom etish"
              android:textSize="@dimen/_14sdp"
              android:fontFamily="@font/roboto_medium"
              android:drawableEnd="@drawable/ic_vector"
              android:paddingRight="@dimen/_35sdp"
              />

