<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lvProfil"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        android:src="@drawable/login_men"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/ivProfil"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivProfil"
        app:layout_constraintBottom_toBottomOf="@+id/ivProfil"
        android:layout_marginLeft="@dimen/_12sdp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fakhriyor"
            android:textSize="@dimen/textsize_16"
            android:fontFamily="@font/roboto_medium"
            android:lineSpacingExtra="2sp"
            android:translationY="-1.17sp"
            style="@style/AppTheme.MediumTextview">
        </TextView>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="+998976282882"
           android:fontFamily="@font/roboto"
           android:textColor="#6B7280"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>