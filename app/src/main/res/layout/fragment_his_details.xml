<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="._user.ui.OrderHistoryDetails.OrderHistoryDetailsFragment">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfil"
        android:layout_width="0dp"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginLeft="@dimen/_16sdp"
        app:layout_constraintVertical_bias="0.02"
        android:src="@drawable/login_men"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/ivProfil"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivProfil"
        app:layout_constraintBottom_toBottomOf="@+id/ivProfil"
        android:layout_marginLeft="@dimen/_12sdp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fakhriyor"
            android:textSize="@dimen/textsize_16"
            android:fontFamily="@font/roboto_medium"
            android:lineSpacingExtra="2sp"
            android:translationY="-1.17sp"
            style="@style/AppTheme.MediumTextview">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+998976282882"
            android:fontFamily="@font/roboto"
            android:textColor="#6B7280"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ivProfil"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="#E5E7EB">
        </View>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/ivPassangerImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:drawableLeft="@drawable/icon_way1"
                android:fontFamily="@font/roboto"
                android:text="Farg’ona, Marg’ilon"
                android:textColor="#111827"
                android:drawablePadding="@dimen/_8sdp"
                android:textSize="@dimen/textsize_14" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:drawableLeft="@drawable/icon_way2"
                android:fontFamily="@font/roboto"
                android:text="Toshkent, Yunusobod"
                android:textColor="#111827"
                android:drawablePadding="@dimen/_8sdp"
                android:textSize="@dimen/textsize_14"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_14sdp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1F2937"
                    android:text="Dokument"
                    android:background="@drawable/background_grey"
                    android:padding="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_26sdp"
                    android:drawableLeft="@drawable/timer"
                    android:text="24 soatdan keyin"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#4B5563"
                    android:fontFamily="@font/roboto"
                    android:drawablePadding="@dimen/_8sdp">
                </TextView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearlayout"
                app:layout_constraintLeft_toLeftOf="@+id/linearlayout"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_8sdp">
                <ImageView
                    android:id="@+id/tvDriverId1"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_gravity="center"
                    android:src="@drawable/comment"
                    android:layout_height="@dimen/_20sdp"
                    android:textColor="#111827"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textSize="@dimen/_13sdp">
                </ImageView>
                <TextView
                    android:id="@+id/tvInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Farg’onada uyimgacha tashlab qo’yasiz"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="#6B7280"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:layout_marginLeft="@dimen/_7sdp"
                    >
                </TextView>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearlayout"
                app:layout_constraintLeft_toLeftOf="@+id/linearlayout"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_8sdp">

            </androidx.appcompat.widget.LinearLayoutCompat>




        </androidx.appcompat.widget.LinearLayoutCompat>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelOrder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_47sdp"
            style="@style/AppTheme.GreyButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Bekor qilish"
            android:textColor="#DC2626"
            android:lineSpacingExtra="2sp"
            android:translationY="-0.94sp"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/roboto_medium"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>