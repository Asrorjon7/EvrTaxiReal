<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lvOffer"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:background="@color/white"
        android:padding="@dimen/_8sdp"
        android:elevation="2dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivDriverPicture"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/login_men"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tvCarModel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/ivDriverPicture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/roboto"
            android:layout_marginLeft="@dimen/_12sdp"
            android:text="Chevrolet Spark"/>
        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvCarModel"
            app:layout_constraintLeft_toLeftOf="@+id/tvCarModel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_8sdp">
            <TextView
                android:id="@+id/tvDriverId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#111827"
                android:text="Abduvali"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_13sdp"
                android:lineSpacingExtra="0.2dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="90 000 so'm"
                android:textSize="@dimen/_14sdp"
                android:textColor="#111827"
                android:fontFamily="@font/roboto">
            </TextView>
        </LinearLayout>
       <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout1"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linearlayout"
            app:layout_constraintLeft_toLeftOf="@+id/linearlayout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_8sdp">
            <ImageView
                android:id="@+id/tvDriverId1"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:src="@drawable/comment"
                android:layout_height="wrap_content"
                android:textColor="#111827"
                android:layout_marginTop="@dimen/_2sdp"
                android:textSize="@dimen/_13sdp">
            </ImageView>
            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Uyizgacha tashlab qo’yaman"
                android:textSize="@dimen/_10sdp"
                android:textColor="#6B7280"
                android:fontFamily="@font/roboto"
                android:layout_marginLeft="@dimen/_7sdp"
                >
            </TextView>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/layout1"
            app:layout_constraintLeft_toLeftOf="@+id/layout1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_10sdp"

            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelOffer"
                android:layout_width="0dp"
                android:layout_height="@dimen/_45sdp"
                app:cornerRadius="@dimen/_3sdp"
                style="@style/AppTheme.GreyButton"
                android:layout_weight="1"
                android:textSize="@dimen/_11sdp"
                android:text="Bekor qilish"
                android:textColor="#DC2626"
                android:fontFamily="@font/roboto_medium">
            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOkOffer"
                android:layout_width="0dp"
                android:layout_height="@dimen/_45sdp"
                style="@style/AppTheme.GreenButton"
                app:cornerRadius="@dimen/_3sdp"
                android:textSize="@dimen/_11sdp"
                android:layout_weight="1"
                android:text="Qabul qilish"
                android:fontFamily="@font/roboto_medium">
            </com.google.android.material.button.MaterialButton>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="._user.main.UserActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:elevation="2dp"
        android:background="@color/toolbarColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent" />
    </com.google.android.material.appbar.AppBarLayout>
        <fragment
            android:id="@+id/navhost"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar"
            app:navGraph="@navigation/usernavmenu" />
    </LinearLayout>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header_main">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="@dimen/_130sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_80sdp">
         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/recItem"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintVertical_bias="0"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintBottom_toTopOf="@+id/LanguageView" />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/LanguageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="3"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:background="@drawable/language_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/lvRusskiy"
                        android:animateLayoutChanges="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/language_flat_selector">
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/russia" />
                        <TextView
                            android:id="@+id/tvRusskiy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="РУ"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/white"
                            android:translationY="-0.25sp"
                            android:lineSpacingExtra="1sp"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/lvUzbekKrill"
                        android:animateLayoutChanges="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/uzb" />
                        <TextView
                            android:id="@+id/tvUzbekKrill"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="wrap_content"
                            android:text="УЗ"

                            android:layout_marginLeft="@dimen/_4sdp"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/textcolor"
                            android:translationY="-0.25sp"
                            android:lineSpacingExtra="1sp"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/lvUzbekLotin"
                        android:animateLayoutChanges="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/language_background">
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/uzb" />
                        <TextView
                            android:id="@+id/tvUzbekLotin"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="wrap_content"
                            android:text="Uz"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/textcolor"
                            android:fontFamily="@font/roboto_medium"
                            android:translationY="-0.25sp"
                            android:lineSpacingExtra="1sp"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDriver"
                style="@style/AppTheme.YellowButton"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/_12sdp"
                android:drawableRight="@drawable/registeer_icon"
                android:drawablePadding="@dimen/_70sdp"
                android:text="@string/haydovchi" />
        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
