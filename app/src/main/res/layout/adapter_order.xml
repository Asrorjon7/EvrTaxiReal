<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_8sdp"
    android:background="@drawable/greyback"
    android:orientation="vertical"
    android:padding="@dimen/_7sdp">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="№1221"
            android:textColor="#111827"
            android:textSize="@dimen/textsize_12" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:fontFamily="@font/roboto"
            android:text="Chevrolet Spark, 40D190MA"
            android:textColor="#B1A89C"
            android:textSize="@dimen/textsize_12" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/roboto"
        android:text="2 DEKABR"
        android:textColor="#B1A89C"
        android:textSize="@dimen/textsize_12"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:drawableLeft="@drawable/qayerdan_adapter"
        android:fontFamily="@font/roboto"
        android:text="Farg’ona, Marg’ilon"
        android:textColor="#111827"
        android:drawablePadding="@dimen/_8sdp"
        android:textSize="@dimen/textsize_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:drawableLeft="@drawable/qayerga_adapter"
        android:fontFamily="@font/roboto"
        android:text="Toshkent, Yunusobod"
        android:textColor="#111827"
        android:drawablePadding="@dimen/_8sdp"
        android:textSize="@dimen/textsize_14"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:drawableLeft="@drawable/money_adapter"
        android:fontFamily="@font/roboto"
        android:text="90 000 So’m"
        android:textColor="#111827"
        android:drawablePadding="@dimen/_8sdp"
        android:textSize="@dimen/textsize_14"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bekor qilish"
            android:padding="@dimen/_4sdp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#DC2626"
            android:textSize="@dimen/_13sdp"
            android:drawableLeft="@drawable/cancel"
            android:drawablePadding="@dimen/_8sdp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:id="@+id/tv_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Davom etmoqda"
            android:textAllCaps="true"
            android:padding="@dimen/_4sdp"
            android:fontFamily="@font/roboto"
            android:textColor="#D97706"
            android:textSize="@dimen/_13sdp"
            android:drawablePadding="@dimen/_8sdp"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>