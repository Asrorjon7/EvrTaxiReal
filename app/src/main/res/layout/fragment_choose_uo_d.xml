<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.ui.UserDriverChoose.UserDriverChooseFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPassanger"
        style="@style/AppTheme.GreenButton"
        android:layout_width="match_parent"
        android:fontFamily="@font/roboto_medium"
        android:text="Yo'lovchi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        android:drawableEnd="@drawable/registeer_icon"
        android:drawablePadding="@dimen/_15sdp"
        android:paddingRight="@dimen/_12sdp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDriver"
        style="@style/AppTheme.YellowButton"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_6sdp"
        android:drawableRight="@color/white"
        android:text="Haydovchi"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPassanger"
        android:drawableEnd="@drawable/driver_icon"
        android:drawablePadding="@dimen/_15sdp"
        android:paddingRight="@dimen/_12sdp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>